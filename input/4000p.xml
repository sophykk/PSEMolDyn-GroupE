<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>5</endTime>
        <deltaT>0.0002</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>10</plotInterval>
        <objectType>cuboid</objectType>
    </simulationParams>

    <lennardJonesForceParams>
        <sigma>1.0</sigma>
        <epsilon>5.0</epsilon>
    </lennardJonesForceParams>

    <linkedCellParams>
        <domainSize>
            <Lx>180</Lx>
            <Ly>90</Ly>
            <Lz>1</Lz>
        </domainSize>
        <cutoffRadius>3.0</cutoffRadius>
        <boundaryConditions>
            <left>o</left>
            <up>o</up>
            <right>o</right>
            <down>o</down>
        </boundaryConditions>
    </linkedCellParams>

    <cuboid>
        <position>
            <x>20.0</x>
            <y>20.0</y>
            <z>0.0</z>
        </position>
        <velocity>
            <v>0.0</v>
            <w>0.0</w>
            <z>0.0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>64</Nx>
            <Ny>64</Ny>
            <Nz>1</Nz>
        </grid>
        <spacing>1.1225</spacing>
        <type>1</type>
    </cuboid>

    <cuboid>
        <position>
            <x>70.0</x>
            <y>60.0</y>
            <z>0.0</z>
        </position>
        <velocity>
            <v>0.0</v>
            <w>-10.0</w>
            <z>0.0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>64</Nx>
            <Ny>64</Ny>
            <Nz>1</Nz>
        </grid>
        <spacing>1.1225</spacing>
        <type>2</type>
    </cuboid>
</simulation>