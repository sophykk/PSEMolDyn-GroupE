<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>40</endTime>
        <deltaT> 0.0005</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>100</plotInterval>
        <objectType>cuboid</objectType>
        <checkpointing>true</checkpointing>
    </simulationParams>

    <linkedCellParams>
        <domainSize>
            <Lx>303</Lx>
            <Ly>180</Ly>
            <Lz>1</Lz>
        </domainSize>
        <cutoffRadius>3</cutoffRadius>
        <boundaryConditions>
            <left>p</left>
            <up>r</up>
            <right>p</right>
            <down>r</down>
        </boundaryConditions>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
    </linkedCellParams>

    <thermostat>
        <initialTemperature>0.5</initialTemperature>
        <thermostatInterval>1000</thermostatInterval>
    </thermostat>

    <cuboid>
        <position>
            <x>1.5</x>
            <y>2</y>
            <z>0</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>250</Nx>
            <Ny>50</Ny>
            <Nz>1</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>1.2</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
        <type>1</type>
    </cuboid>
    
    <sphere>
        <position>
            <x>150</x>
            <y>150</y>
            <z>0</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1</mass>
        <spacing>1.2</spacing>
        <radius>20</radius>
        <sigma>1.2</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
        <type>2</type>
    </sphere>
</simulation>