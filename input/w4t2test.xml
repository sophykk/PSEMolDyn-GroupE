<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>25</endTime>
        <deltaT> 0.0005</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>10</plotInterval>
        <objectType>cuboid</objectType>
        <checkpointing>false</checkpointing>
    </simulationParams>
    
    <linkedCellParams>
        <domainSize>
            <Lx>63</Lx>
            <Ly>36</Ly>
            <Lz>1</Lz>
        </domainSize>
        <cutoffRadius>2.5</cutoffRadius>
        <boundaryConditions>
            <left>p</left>
            <up>r</up>
            <right>p</right>
            <down>r</down>
        </boundaryConditions>
        <gravitationalAcceleration>1</gravitationalAcceleration>
    </linkedCellParams>

    <thermostat>
        <initialTemperature>40</initialTemperature>
        <thermostatInterval>1000</thermostatInterval>
    </thermostat>

    <cuboid>
        <position>
            <x>0.6</x>
            <y>2</y>
            <z>0</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>50</Nx>.
            <Ny>14</Ny>
            <Nz>1</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>1.0</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>1</gravitationalAcceleration>
        <type>1</type>
    </cuboid>

    <cuboid>
        <position>
            <x>0.6</x>
            <y>19</y>
            <z>0</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>2.0</mass>
        <grid>
            <Nx>50</Nx>
            <Ny>14</Ny>
            <Nz>1</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>0.9412</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>1</gravitationalAcceleration>
        <type>2</type>
