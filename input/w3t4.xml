<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>10</endTime>
        <deltaT> 0.00005</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>10</plotInterval>
    </simulationParams>

    <lennardJonesForceParams>
        <sigma>1.0</sigma>
        <epsilon>5.0</epsilon>
    </lennardJonesForceParams>

    <linkedCellParams>
        <domainSize>
            <Lx>120</Lx>
            <Ly>50</Ly>
            <Lz>1</Lz>
        </domainSize>
        <cutoffRadius>3.0</cutoffRadius>
        <boundaryCondition>r</boundaryCondition>
    </linkedCellParams>
    
    <sphere>
        <position>
            <x>60</x>
            <y>25</y>
            <z>0</z>
        </position>
        <velocity>
            <v>0</v>
            <w>-10</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <spacing>1.1225</spacing>
        <radius>15</radius>
        <type>1</type>
    </sphere>
</simulation>