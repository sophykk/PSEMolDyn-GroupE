<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>500</endTime>
        <deltaT> 0.0005</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>10</plotInterval>
        <objectType>cuboid</objectType>
        <checkpointing>false</checkpointing>
        <useParallelization>false</useParallelization>
    </simulationParams>

    <linkedCellParams>
        <domainSize>
            <Lx>30</Lx>
            <Ly>30</Ly>
            <Lz>12</Lz>
        </domainSize>
        <cutoffRadius>2.75</cutoffRadius>
        <boundaryConditions>
            <left>o</left>
            <up>p</up>
            <right>o</right>
            <down>p</down>
            <front>p</front>
            <back>p</back>
        </boundaryConditions>
        <gravitationalAcceleration>-0.8</gravitationalAcceleration>
        <isMembrane>false</isMembrane>
    </linkedCellParams>

    <thermostat>
        <initialTemperature>40</initialTemperature>
        <thermostatInterval>10</thermostatInterval>
    </thermostat>

    <cuboid>
        <position>
            <x>1</x>
            <y>0.5</y>
            <z>0.5</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>2</Nx>
            <Ny>30</Ny>
            <Nz>12</Nz>
        </grid>
        <spacing>1.0</spacing>
        <sigma>1.1</sigma>
        <epsilon>2.0</epsilon>
        <gravitationalAcceleration>-0.8</gravitationalAcceleration>
        <type>1</type>
        <isWall>true</isWall>
    </cuboid>

    <cuboid>
        <position>
            <x>27.2</x>
            <y>0.5</y>
            <z>0.5</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>2</Nx>
            <Ny>30</Ny>
            <Nz>12</Nz>
        </grid>
        <spacing>1.0</spacing>
        <sigma>1.1</sigma>
        <epsilon>2.0</epsilon>
        <gravitationalAcceleration>-0.8</gravitationalAcceleration>
        <type>2</type>
        <isWall>true</isWall>
    </cuboid>

    <cuboid>
        <position>
            <x>3.2</x>
            <y>0.6</y>
            <z>0.6</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>20</Nx>
            <Ny>25</Ny>
            <Nz>10</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>1.0</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>-0.8</gravitationalAcceleration>
        <type>3</type>
        <isWall>false</isWall>
    </cuboid>
</simulation>