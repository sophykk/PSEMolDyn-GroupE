<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/xsd/Simulation.xsd">
    <simulationParams>
        <endTime>100</endTime>
        <deltaT> 0.0005</deltaT>
        <modelType>lennardJones</modelType>
        <containerType>linkedCells</containerType>
        <plotInterval>10</plotInterval>
        <objectType>cuboid</objectType>
        <checkpointing>false</checkpointing>
        <useParallelization>true</useParallelization>
    </simulationParams>

    <parallelizationParams>
        <parallelizationStrategy>56</parallelizationStrategy>
        <threadsNumber>2</threadsNumber>
    </parallelizationParams>
    
    <linkedCellParams>
        <domainSize>
            <Lx>60</Lx>
            <Ly>60</Ly>
            <Lz>60</Lz>
        </domainSize>
        <cutoffRadius>3.6</cutoffRadius>
        <boundaryConditions>
            <left>p</left>
            <up>r</up>
            <right>p</right>
            <down>r</down>
            <front>p</front>
            <back>p</back>
        </boundaryConditions>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
        <isMembrane>false</isMembrane>
    </linkedCellParams>

    <thermostat>
        <initialTemperature>40</initialTemperature>
        <thermostatInterval>1000</thermostatInterval>
    </thermostat>

    <cuboid>
        <position>
            <x>0.6</x>
            <y>0.6</y>
            <z>0.6</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>1.0</mass>
        <grid>
            <Nx>50</Nx>
            <Ny>20</Ny>
            <Nz>50</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>1.2</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
        <type>1</type>
        <isWall>false</isWall>
    </cuboid>

    <cuboid>
        <position>
            <x>0.6</x>
            <y>24.6</y>
            <z>0.6</z>
        </position>
        <velocity>
            <v>0</v>
            <w>0</w>
            <z>0</z>
        </velocity>
        <mass>2.0</mass>
        <grid>
            <Nx>50</Nx>
            <Ny>20</Ny>
            <Nz>50</Nz>
        </grid>
        <spacing>1.2</spacing>
        <sigma>1.1</sigma>
        <epsilon>1.0</epsilon>
        <gravitationalAcceleration>-12.44</gravitationalAcceleration>
        <type>2</type>
        <isWall>false</isWall>
    </cuboid>
</simulation>